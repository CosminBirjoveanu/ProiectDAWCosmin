@model ProiectDAWCosmin.Models.Album
@{
    ViewBag.Title = "Update";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Album"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.AlbumId)

    <br />
    @Html.Label("Title", "Title:")
    <br />
    @Html.EditorFor(b => b.Title, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Title, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Songs", "Songs:")
    <br />
    @Html.TextAreaFor(b => b.Songs, new { @class = "form-control", @rows = "10" })
    @Html.ValidationMessageFor(b => b.Songs, "", new { @class = "text-danger" })
    <br />

    <input class="btn btn-primary" type="submit" value="Update" /> 
}